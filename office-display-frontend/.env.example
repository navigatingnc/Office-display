# Office Display Frontend Configuration
# Copy this file to .env.local and update the values for your environment

# API Configuration
VITE_API_URL=http://localhost:5000

# Application Configuration
VITE_APP_TITLE=Office Display
VITE_APP_DESCRIPTION=Real-time calendar and weather display for office environments

# Feature Flags
VITE_ENABLE_FULLSCREEN=true
VITE_ENABLE_KIOSK_MODE=true

# Refresh Intervals (in milliseconds)
VITE_CALENDAR_REFRESH_INTERVAL=300000
VITE_WEATHER_REFRESH_INTERVAL=600000
